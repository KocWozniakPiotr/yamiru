#: import utils kivy.utils
<Button>
    background_normal: 'img/button.png'
    background_down: 'img/button_down.png'
    size_hint: (None, None)
    bold: True


<UILayout>

    BoxLayout:
        orientation: "vertical"
        size: root.xx, root.yy
        canvas.before:
            Color:
                rgba: (0/255, 24/255, 32/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        # empty free space for background
        Label:
            id: free_space_top
            text: ""
            size_hint: (None, None)
            width: root.xx
            height: (root.yy-root.xx-(root.xx/8)-(root.xx / 1.53))/4

        Label:
            id: main_display
            text: ''
            size_hint: (None, None)
            width: root.xx
            height: root.xx
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'img/display.png'

        GridLayout:
            cols:1

            Label:
                id: content
                text: ''
                text_size:self.size
                halign:"left"
                valign:"top"
                size_hint: (None, None)
                width: root.xx
                height: root.xx / 1.53
                canvas.before:
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: 'img/ui.png'

            GridLayout:
                cols:4

                Button:
                    width: root.xx/4
                    height: root.xx/8
                    text: ""
                    id: msg
                    on_press: root.click_msg()

                Button:
                    width: root.xx/4
                    height: root.xx/8
                    text: ""
                    id: task
                    on_press: root.click_task()

                Button:
                    width: root.xx/4
                    height: root.xx/8
                    text: ""
                    id: item
                    on_press: root.click_item()

                Button:
                    width: root.xx/4
                    height: root.xx/8
                    text: ""
                    id: option
                    on_press: root.click_option()


        # empty free space for background
        Label:
            id: free_space_btm
            text: ""
            size_hint: (None, None)
            width: root.xx
            height: (root.yy-root.xx-(root.xx/8)-(root.xx / 1.53))*0.75

<Cell>:
    id: cell_tile
    canvas:
        Rectangle:
            source: "img/txt.png"
            size : self.size
            pos: self.pos

<Bunny>:
    canvas:
        Rectangle:
            source: "img/bunny.png"
            size : self.size
            pos: self.pos

<Sleeper>:
    canvas:
        Rectangle:
            source: "img/presplash.png"
            size : self.size
            pos: self.pos

